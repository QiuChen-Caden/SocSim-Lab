# OASIS Frontend Backend Configuration

# API settings
APP_NAME=OASIS Frontend Backend
VERSION=0.1.0
DEBUG=true

# CORS origins (comma-separated list of allowed origins)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OASIS settings
USE_OASIS=true

# Database paths (used by os.environ.get in code)
OASIS_DB_PATH=../data/oasis_frontend.db
OASIS_RUNTIME_DB_PATH=../data/oasis_simulation_run.db

# LLM settings (optional; required to enable LLM actions)
# LLM_API_KEY=your_api_key_here
# LLM_PROVIDER=deepseek
# LLM_MODEL=deepseek-chat
# LLM_BASE_URL=https://api.deepseek.com/v1
